                                                    x:Name="btnGenerateReport"
                                                    Width="150"
                                                    Height="30"
                                                    Background="#0078D7"
                                                    BorderBrush="#0067B8"
                                                    Content="Bericht generieren"
                                                    Foreground="White" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </GroupBox>

                                <!--  Berichtsergebnisse  -->
