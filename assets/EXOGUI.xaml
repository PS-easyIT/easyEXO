                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            FontWeight="SemiBold"
                                                            Foreground="#C62828"
                                                            Text="Ausgewählte Mailbox löschen" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </GroupBox>

                            <!--  Aktuelle Berechtigungen darunter  -->
                            <GroupBox
                                Grid.Row="2"
                                Background="#ffffff"
                                Header="Aktuelle Berechtigungen für ausgewählte Shared Mailbox">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <DataGrid
                                        x:Name="lstCurrentPermissions"
                                        Grid.Row="0"
                                        MinHeight="300"
                                        Margin="8,8,8,0"
