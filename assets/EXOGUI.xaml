                                TextDecorations="Underline" />

                            <!--  Shared Mailbox Verwaltung  -->
                            <GroupBox
                                Grid.Row="1"
                                Background="#ffffff"
                                Header="Shared Mailbox Verwaltung">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Linke Seite: Erstellen  -->
                                    <Border
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Padding="0,0,10,10"
                                        BorderThickness="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,0,10"
                                                FontWeight="SemiBold"
                                                Text="Neue Shared Mailbox" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,8"
                                                VerticalAlignment="Center"
                                                Text="Name:" />
                                            <TextBox
                                                x:Name="txtSharedMailboxName"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Height="30"
                                                Margin="0,0,0,8" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,8"
                                                VerticalAlignment="Center"
                                                Text="E-Mail-Adresse:" />
                                            <TextBox
                                                x:Name="txtSharedMailboxEmail"
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Height="30"
                                                Margin="0,0,0,8" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,8"
                                                VerticalAlignment="Center"
                                                Text="SMTP-Domain:" />
                                            <ComboBox
                                                x:Name="cmbSharedMailboxDomain"
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Height="30"
                                                Margin="0,0,0,8" />

                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.ColumnSpan="2"
                                                Margin="0,10,0,0"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                                <Button
                                                    x:Name="btnCreateSharedMailbox"
                                                    Width="170"
                                                    Height="30"
                                                    Margin="0,0,8,0"
                                                    Background="#FFECFDE4"
                                                    Content="Shared Mailbox erstellen" />
                                                <Button
                                                    x:Name="btnConvertToShared"
                                                    Width="155"
                                                    Height="30"
                                                    Background="#FFEDE8FF"
                                                    Content="In Shared umwandeln"
                                                    ToolTip="Vorhandenes Benutzerpostfach in Shared Mailbox konvertieren" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  Shared Mailbox Berechtigungen (links unten)  -->
                                    <Border
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Padding="0,16,10,0"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="0,1,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,0,10"
                                                FontWeight="SemiBold"
                                                Text="Shared Mailbox Berechtigungen" />

                                            <!--  Eingabefelder für Berechtigungen  -->
                                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Width="105"
                                                    Margin="0,0,8,8"
                                                    VerticalAlignment="Center"
                                                    Text="Shared Mailbox:" />
                                                <TextBox
                                                    x:Name="txtSharedMailboxPermSource"
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Height="30"
                                                    Margin="0,0,0,8" />

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Width="105"
                                                    Margin="0,0,8,8"
                                                    VerticalAlignment="Center"
                                                    Text="Benutzer:" />
                                                <TextBox
                                                    x:Name="txtSharedMailboxPermUser"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Height="30"
                                                    Margin="0,0,0,8" />

                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Width="105"
                                                    Margin="0,0,8,8"
                                                    VerticalAlignment="Center"
                                                    Text="Berechtigungstyp:" />
                                                <ComboBox
                                                    x:Name="cmbSharedMailboxPermType"
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    Height="30"
                                                    Margin="0,0,0,12">
                                                    <ComboBoxItem Content="Full Access" IsSelected="True" />
                                                    <ComboBoxItem Content="Send As" />
                                                    <ComboBoxItem Content="Send on Behalf" />
                                                </ComboBox>
                                            </Grid>

                                            <!--  Buttons für Berechtigungen  -->
                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                                <Button
                                                    x:Name="btnAddSharedMailboxPermission"
                                                    Width="170"
                                                    Height="30"
                                                    Margin="0,0,10,0"
                                                    Background="#FFECFDE4"
                                                    Content="Berechtigung hinzufügen" />
                                                <Button
                                                    x:Name="btnRemoveSharedMailboxPermission"
                                                    Width="170"
                                                    Height="30"
                                                    Background="#FFFFE3E3"
                                                    Content="Berechtigung entfernen" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  Vertikaler Trenner  -->
                                    <Border
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Width="1"
                                        Margin="5,0"
                                        Background="#e0e0e0"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="1,0,1,0" />

                                    <!--  Rechte Seite: Verwaltung und Weiterleitungen  -->
                                    <Grid
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        Margin="10,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Überschrift  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Margin="0,0,0,10"
                                            FontWeight="SemiBold"
                                            Text="Bestehende Mailboxes verwalten" />

                                        <!--  Auswahl und Basis-Einstellungen  -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,8"
                                                VerticalAlignment="Center"
                                                Text="Shared Mailbox:" />
                                            <ComboBox
                                                x:Name="cmbSharedMailboxSelect"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Height="30"
                                                Margin="0,0,8,8" />
                                            <Button
                                                x:Name="btnShowSharedMailboxes"
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Width="105"
                                                Height="30"
                                                Margin="0,0,0,8"
                                                Background="#FFE4F1FD"
                                                Content="Alle anzeigen" />

                                            <!--  Auto-Mapping in einer Reihe  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"
                                                Text="Auto-Mapping:" />
                                            <CheckBox
                                                x:Name="chkAutoMapping"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"
                                                Content="Aktivieren" />
                                            <Button
                                                x:Name="btnUpdateAutoMapping"
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Width="105"
                                                Height="30"
                                                Background="#FFFEFFE5"
                                                Content="Aktualisieren" />
                                        </Grid>

                                        <!--  Berechtigungen anzeigen Button  -->
                                        <StackPanel
                                            Grid.Row="2"
                                            Margin="0,8,0,15"
                                            Orientation="Horizontal">
                                            <Button
                                                x:Name="btnShowSharedMailboxPerms"
                                                Width="170"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Background="#FFE4F1FD"
                                                Content="Berechtigungen anzeigen" />
                                            <Button
                                                x:Name="btnHideFromGAL"
                                                Width="140"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Background="#FFFFEEEE"
                                                Content="Aus GAL ausblenden" />
                                            <Button
                                                x:Name="btnShowInGAL"
                                                Width="140"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                Background="#FFF5FFF1"
                                                Content="In GAL anzeigen" />
                                        </StackPanel>

                                        <!--  Trennlinie  -->
                                        <Border
                                            Grid.Row="3"
                                            Margin="0,0,0,15"
                                            Padding="0,15,0,0"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="0,1,0,0">
                                            <TextBlock
                                                Margin="0,0,0,10"
                                                FontWeight="SemiBold"
                                                Text="Mailbox Weiterleitungen" />
                                        </Border>

                                        <!--  Weiterleitungseinstellungen  -->
                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,8"
                                                VerticalAlignment="Center"
                                                Text="Weiterleiten an:" />
                                            <TextBox
                                                x:Name="txtForwardingAddress"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Height="30"
                                                Margin="0,0,0,8" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Width="105"
                                                Margin="0,0,8,0"
                                                Text="" />
                                            <CheckBox
                                                x:Name="chkKeepCopy"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,8"
                                                Content="Kopie im Postfach behalten" />

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.ColumnSpan="2"
                                                Margin="0,5,0,10"
                                                Orientation="Horizontal">
                                                <Button
                                                    x:Name="btnSetForwarding"
                                                    Width="150"
                                                    Height="30"
                                                    Margin="0,0,10,0"
                                                    Background="#FFECFDE4"
                                                    Content="Weiterleitung setzen" />
                                                <Button
                                                    x:Name="btnRemoveForwarding"
                                                    Width="150"
                                                    Height="30"
                                                    Margin="0,0,10,0"
                                                    Background="#FFFFE3E3"
                                                    Content="Weiterleitung entfernen" />
                                                <Button
                                                    x:Name="btnGetForwardingMailboxes"
                                                    Width="180"
                                                    Height="30"
                                                    HorizontalAlignment="Center"
                                                    Background="#FFE4F1FD"
                                                    Content="Alle Weiterleitungen anzeigen" />
                                            </StackPanel>
