                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="End Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <DatePicker Grid.Row="2" Grid.Column="1" Name="dpAutoReplyEnd" Margin="0,2,10,2"/>
                                                
                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Message:" VerticalAlignment="Top" Margin="0,8,10,0"/>
                                                <TextBox Grid.Row="3" Grid.Column="1" Name="txtAutoReplyMessage" 
                                                         TextWrapping="Wrap" AcceptsReturn="True" Height="80" 
                                                         Text="I am out of office from {StartDate} to {EndDate} and have no access to emails."
                                                         Margin="0,5,10,5"/>
                                                
                                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                                    <Button Name="btnSetAutoReply" Content="Enable Auto Reply" Background="#28a745" Foreground="White" Margin="0,0,10,0" Padding="15,5"/>
                                                    <Button Name="btnDisableAutoReply" Content="Disable Auto Reply" Background="#dc3545" Foreground="White" Padding="15,5"/>
                                                </StackPanel>
                                            </Grid>
                                        </Expander>
                                        
                                        <!-- Current Auto-Reply Status -->
                                        <GroupBox Grid.Row="1" Header="Current Auto Reply Status" Margin="5">
                                            <DataGrid Name="dgAutoReplyStatus" Height="150">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="User" Binding="{Binding DisplayName}" Width="150"/>
                                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding AutoReplyState}" Width="60"/>
                                                    <DataGridTextColumn Header="Start" Binding="{Binding StartTime}" Width="100"/>
                                                    <DataGridTextColumn Header="End" Binding="{Binding EndTime}" Width="100"/>
                                                    <DataGridTextColumn Header="Message" Binding="{Binding InternalMessage}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </GroupBox>
                                        
                                        <!-- Management Buttons -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
                                            <Button Name="btnRefreshAutoReply" Content="Refresh Status" Margin="0,0,5,0" Padding="10,5"/>
                                            <Button Name="btnBulkAutoReply" Content="Bulk Setup" Margin="5,0" Padding="10,5"/>
                                            <Button Name="btnExportAutoReply" Content="Export Status" Margin="5,0" Padding="10,5"/>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Background="#142831" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="txtStatus"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#e2e2e2"
                    Text="Bereit" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Copyright 2025 @" FontSize="11" Foreground="#e2e2e2" Margin="0,0,5,0"/>
                    <TextBlock Text="by PSscripts.de" FontSize="11" Foreground="#e2e2e2" Margin="0,0,35,0"/>
                    <TextBlock Text="www.psscripts.de" FontSize="11" Foreground="#d0e8ff" Cursor="Hand"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="Exchange Online Management v0.0.7" 
                          HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11" Foreground="#e2e2e2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
