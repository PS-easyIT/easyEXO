                                                <!--  Anpassung von btnShowGroupMembers und btnUpdateGroupSettings  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="5,20,0,0"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Vertical">
                                                    <Button
                                                        x:Name="btnShowGroupMembers"
                                                        Width="170"
                                                        Height="30"
                                                        Margin="0,3"
                                                        Background="#FFCEE2F5"
                                                        Content="Mitglieder anzeigen" />
