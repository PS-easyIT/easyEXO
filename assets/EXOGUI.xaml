                                                        x:Name="chkHiddenFromGAL"
                                                        Margin="0,3"
                                                        Content="Aus GAL ausblenden" />
                                                    <CheckBox
                                                        x:Name="chkRequireSenderAuth"
                                                        Margin="0,3"
                                                        Content="Absender-Authentifizierung" />
                                                    <CheckBox
                                                        x:Name="chkAllowExternalSenders"
                                                        Margin="0,3"
                                                        Content="Externe Absender zulassen" />
