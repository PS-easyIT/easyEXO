                                                    Tag="" />
                                                <ComboBoxItem Content="Deutsch (Deutschland)" Tag="de-DE" />
                                                <ComboBoxItem Content="Englisch (USA)" Tag="en-US" />
                                                <ComboBoxItem Content="Französisch (Frankreich)" Tag="fr-FR" />
                                                <ComboBoxItem Content="Spanisch (Spanien)" Tag="es-ES" />
                                                <!--  Weitere Sprachen nach Bedarf  -->
                                            </ComboBox>
                                            <TextBlock
                                                Margin="20,5,5,5"
                                                VerticalAlignment="Center"
                                                Text="Zeitzone:" />
                                            <ComboBox
                                                x:Name="cmbRegionTimezone"
                                                Width="250"
                                                Height="30"
                                                Margin="0,5,0,5">
                                                <ComboBoxItem
                                                    Content="(Keine Änderung)"
                                                    IsSelected="True"
                                                    Tag="" />
                                                <ComboBoxItem Content="W. Europe Standard Time" Tag="W. Europe Standard Time" />
                                                <ComboBoxItem Content="Central European Standard Time" Tag="Central European Standard Time" />
                                                <ComboBoxItem Content="GMT Standard Time" Tag="GMT Standard Time" />
                                                <ComboBoxItem Content="Eastern Standard Time" Tag="Eastern Standard Time" />
                                                <ComboBoxItem Content="Pacific Standard Time" Tag="Pacific Standard Time" />
                                                <!--  Weitere Zeitzonen könnten per Skript geladen werden  -->
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Datumsformat & Zeitformat -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            VerticalAlignment="Center"
                                            Text="Datumsformat:" />
                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                            <ComboBox
                                                x:Name="cmbRegionDateFormat"
                                                Width="200"
                                                Height="30"
                                                Margin="0,5,0,5"
                                                ToolTip="Das Datumsformat für die Postfächer festlegen.">
                                                <ComboBoxItem
                                                    Content="(Keine Änderung)"
                                                    IsSelected="True"
                                                    Tag="" />
                                                <ComboBoxItem Content="dd.MM.yyyy" Tag="dd.MM.yyyy" />
                                                <ComboBoxItem Content="MM/dd/yyyy" Tag="MM/dd/yyyy" />
                                                <ComboBoxItem Content="yyyy-MM-dd" Tag="yyyy-MM-dd" />
                                                <ComboBoxItem Content="d. MMMM yyyy" Tag="d. MMMM yyyy" />
                                            </ComboBox>
                                            <TextBlock
                                                Margin="20,5,5,5"
                                                VerticalAlignment="Center"
                                                Text="Zeitformat:" />
                                            <ComboBox
                                                x:Name="cmbRegionTimeFormat"
                                                Width="200"
                                                Height="30"
                                                Margin="0,5,0,5"
                                                ToolTip="Das Zeitformat für die Postfächer festlegen.">
                                                <ComboBoxItem
                                                    Content="(Keine Änderung)"
                                                    IsSelected="True"
                                                    Tag="" />
                                                <ComboBoxItem Content="HH:mm" Tag="HH:mm" />
                                                <ComboBoxItem Content="hh:mm tt" Tag="hh:mm tt" />
                                                <ComboBoxItem Content="HH:mm:ss" Tag="HH:mm:ss" />
                                            </ComboBox>
                                        </StackPanel>
                                        
                                        <!-- Standardordnernamen (Checkbox) -->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            VerticalAlignment="Center"
                                            Text="Ordnernamen an Sprache anpassen:"
                                            TextWrapping="Wrap" />
                                        <CheckBox
                                            x:Name="chkRegionDefaultFolderNameMatchingUserLanguage"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,5,0,10"
                                            VerticalAlignment="Center"
                                            IsThreeState="True"
                                            ToolTip="Legt fest, ob Standardordner (z.B. Posteingang) an die Benutzersprache angepasst werden." />

                                        <Button
                                            x:Name="btnSetRegionSettings"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Width="220"
                                            Height="30"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Right"
                                            Background="#FFFFE3E3"
                                            Content="Regionaleinstellungen anwenden"
                                            ToolTip="Setzt die ausgewählte Sprache und/oder Zeitzone für die angegebenen Postfächer." />

                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Margin="0,10,0,0"
                                            FontStyle="Italic"
                                            Foreground="OrangeRed"
                                            Text="Hinweis: Das Setzen für 'ALL' kann je nach Anzahl der Postfächer dauern! Bei 'Ordnernamen anpassen' bedeutet: Angehakt = Ja (Anpassen), Nicht Angehakt = Nein (Nicht anpassen)."
                                            TextWrapping="Wrap" />

                                    </Grid>
                                </GroupBox>

                                <GroupBox Padding="10" Header="Aktuelle Einstellungen abrufen">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Text="Postfach:" />
                                        <TextBox
                                            x:Name="txtGetRegionMailbox"
                                            Grid.Column="1"
                                            Height="30"
                                            Margin="0,0,10,0"
                                            ToolTip="E-Mail-Adresse des Postfachs, dessen Einstellungen abgerufen werden sollen." />
                                        <Button
                                            x:Name="btnGetRegionSettings"
                                            Grid.Column="2"
                                            Width="150"
                                            Height="30"
                                            Background="#FFE4F1FD"
                                            Content="Einstellungen abrufen" />
                                    </Grid>
                                </GroupBox>

                                <GroupBox
                                    Margin="0,15,0,0"
                                    Padding="10"
                                    Header="Ergebnis / Status">
                                    <TextBox
                                        x:Name="txtRegionResult"
                                        Height="300" 
                                        Background="#f9f9f9"
                                        BorderThickness="1"
                                        FontFamily="Consolas"
                                        IsReadOnly="True"
                                        VerticalScrollBarVisibility="Auto" />
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!--  Status Bar  -->
            <Border
                Grid.Row="2"
                Background="#f3f3f3"
                CornerRadius="0,0,8,8">
                <TextBlock
                    x:Name="txtStatus"
                    Margin="14,0,0,0"
                    Padding="0,5"
                    VerticalAlignment="Center"
                    Text="Bereit" FontWeight="Bold" />
            </Border>
        </Grid>
    </Border>
</Window>
