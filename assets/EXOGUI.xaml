                                                BorderThickness="1">
                                                <ListBoxItem
                                                    Content="Postfachberichte"
                                                    IsSelected="True"
                                                    Tag="mailbox" />
                                                <ListBoxItem Content="Berechtigungsberichte" Tag="permissions" />
                                                <ListBoxItem Content="Gruppenberichte" Tag="groups" />
                                                <ListBoxItem Content="Ressourcenberichte" Tag="resources" />
                                                <ListBoxItem Content="Auditberichte" Tag="audit" />
                                            </ListBox>

                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,0,0,10"
                                                FontWeight="SemiBold"
                                                Text="Verfügbare Berichte" />

                                            <ComboBox
                                                x:Name="cmbReportType"
                                                Grid.Row="3"
                                                Height="30"
                                                Margin="0,0,0,0" />
                                        </Grid>

                                        <!--  Vertikaler Trenner  -->
                                        <Border
                                            Grid.Column="1"
                                            Width="1"
                                            Margin="0,0"
                                            Background="#e0e0e0"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="1,0,1,0" />

                                        <!--  Rechte Seite: Berichtsparameter  -->
                                        <Grid Grid.Column="2" Margin="15,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,10"
                                                FontWeight="SemiBold"
                                                Text="Berichtsparameter" />

                                            <!--  Datumseingaben  -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="Zeitraum (optional)" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Width="40"
                                                        Margin="0,0,10,5"
                                                        VerticalAlignment="Center"
                                                        Text="Von:" />
                                                    <DatePicker
                                                        x:Name="dpReportStartDate"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Width="40"
                                                        Margin="0,0,10,5"
                                                        VerticalAlignment="Center"
                                                        Text="Bis:" />
                                                    <DatePicker
                                                        x:Name="dpReportEndDate"
                                                        Grid.Row="1"
                                                        Grid.Column="1" />
                                                </Grid>
                                            </StackPanel>

                                            <!--  Filter  -->
                                            <Border
                                                Grid.Row="2"
                                                Margin="0,15,0,0"
                                                Padding="0,15,0,0"
                                                BorderBrush="#e0e0e0"
                                                BorderThickness="0,1,0,0">
                                                <StackPanel>
                                                    <TextBlock
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Filter (optional)" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            Width="70"
                                                            Margin="0,0,10,0"
                                                            VerticalAlignment="Center"
                                                            Text="Benutzer:" />
                                                        <TextBox
                                                            x:Name="txtReportUserFilter"
                                                            Grid.Column="1"
                                                            Height="30" />
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <!--  Export-Optionen  -->
                                            <Border
                                                Grid.Row="3"
                                                Margin="0,15,0,0"
                                                Padding="0,15,0,0"
                                                BorderBrush="#e0e0e0"
                                                BorderThickness="0,1,0,0">
                                                <StackPanel>
                                                    <TextBlock
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Export-Optionen" />
                                                    <CheckBox
                                                        x:Name="chkAutoExport"
                                                        Margin="0,0,0,5"
                                                        Content="Automatisch als CSV speichern" />
                                                    <CheckBox
                                                        x:Name="chkOpenAfterExport"
