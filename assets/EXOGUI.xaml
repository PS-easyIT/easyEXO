                                        <!--  Separator vor der gefährlichen Aktion  -->
                                        <Border
                                            Grid.Row="5"
                                            Margin="0,5,0,0"
                                            Padding="0,15,0,0"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="0,1,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Warnsymbol  -->
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Foreground="#FF6D00"
                                                    Text="⚠️" />

                                                <!--  Löschbutton mit verbesserten Hinweisen  -->
