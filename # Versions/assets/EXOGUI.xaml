                    </Expander>

                    <!--  Sicherheit & Compliance  -->
                    <Expander
                        Background="#FF738AA0"
                        Header="Sicherheit &amp; Compliance"
                        IsExpanded="False">
                        <StackPanel>
                            <Button
                                x:Name="btnNavATP"
                                HorizontalAlignment="Left"
